@page
@model IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<CarrefourPolaire.Resources.Pages.Index> L

@{
    ViewData["Title"] = L["PageTitle"];
}

<!-- Hero Section -->
<section class="bg-light text-center py-5">
    <div class="container">
        <img src="~/images/logo2.svg" alt="@L["LogoAlt"]" width="80" class="mb-3" loading="lazy">
        <h1 class="display-4 fw-bold text-blue">@L["HeroTitle"]</h1>
        <p class="lead mb-4">@L["HeroSubtitle"]</p>
        <a href="/Signup" class="btn btn-orange btn-lg me-2">@L["SignUpButton"]</a>
        <a href="/Menu" class="btn btn-outline-orange btn-lg">@L["MenuButton"]</a>
    </div>
</section>

<!-- Event Info Section -->
<section class="py-5">
    <div class="container text-center">
        <div class="row info-row d-flex flex-wrap justify-content-center">
            <div class="col-md-4 mb-4 card-custom">
                <h3 class="text-blue">@L["WhenTitle"]</h3>
                <p>@L["WhenValue"]</p>
            </div>
            <div class="col-md-4 mb-4 card-custom">
                <h3 class="text-blue">@L["WhereTitle"]</h3>
                <p>@L["WhereValue"]</p>
            </div>
            <div class="col-md-4 mb-4  card-custom">
                <h3 class="text-blue">@L["WhoTitle"]</h3>
                <p>@L["WhoValue"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Highlights / Features -->
<section class="bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-5">@L["WhatToExpectTitle"]</h2>
        <div class=" row  d-flex flex-wrap justify-content-center">
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-blue">@L["Feature1Title"]</h5>
                        <p class="card-text">@L["Feature1Text"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-blue">@L["Feature2Title"]</h5>
                        <p class="card-text">@L["Feature2Text"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-blue">@L["Feature3Title"]</h5>
                        <p class="card-text">@L["Feature3Text"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-blue">@L["WhatToExpect.ServiceActivity.Title"]</h5>
                        <p class="card-text">@L["WhatToExpect.ServiceActivity.Description"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

