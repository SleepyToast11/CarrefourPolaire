@page
@model IndexModel
@{
    ViewData["Title"] = "Carrefour Polaire";
}

<!-- Hero Section -->
<section class="bg-light text-center py-5">
    <div class="container">
        <img src="~/images/templogo.svg" alt="Carrefour Polaire" width="80" class="mb-3">
        <h1 class="display-4 fw-bold text-orange">Carrefour Polaire 2025</h1>
        <p class="lead mb-4">Winter adventure for scouts aged 15–18 from all over the province. Join us for a weekend full of activities, community, and fun!</p>
        <a href="/Signup" class="btn btn-orange btn-lg me-2">Sign Up 111</a>
        <a href="/Menu" class="btn btn-outline-orange btn-lg">See the Menu</a>
    </div>
</section>

<!-- Event Info Section -->
<section class="py-5">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-4 mb-4">
                <h3 class="text-orange">When</h3>
                <p>January 30th-1st, 2026</p>
            </div>
            <div class="col-md-4 mb-4">
                <h3 class="text-orange">Where</h3>
                <p>Domaine de la butte</p>
            </div>
            <div class="col-md-4 mb-4">
                <h3 class="text-orange">Who</h3>
                <p>Scouts aged 15–18</p>
            </div>
        </div>
    </div>
</section>

<!-- Highlights / Features -->
<section class="bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-5">What to Expect</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-orange">Winter Activities</h5>
                        <p class="card-text">Snow games, outdoor challenges, and team adventures to bring everyone together.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-orange">Community</h5>
                        <p class="card-text">Meet new friends from all over the province and build lasting memories.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-orange">Food & Warmth</h5>
                        <p class="card-text">Delicious meals with options for allergies, and cozy spaces to relax after the snow.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
