@page
@model IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<CarrefourPolaire.Resources.Pages.About.Index> L

@{
    ViewData["Title"] = L["PageTitle"];
}

<div class="container mt-4">
    <h1 class="mb-3">@L["WhatIsTitle"]</h1>

    <p class="lead">
        @L["IntroPart1"]
        <strong>@L["IntroStrongPart"]</strong>
        @L["IntroPart2"]
        <em>@L["IntroEmphasisPart"]</em>
        @L["IntroPart3"]
    </p>

    <hr />

    <h2>@L["ProvincialTitle"]</h2>
    <p>@L["ProvincialDescription"]</p>

    <h2>@L["WhyCarrefourTitle"]</h2>
    <p>
        @L["WhyCarrefourPart1"]
        <em>@L["WhyCarrefourEmphasis"]</em>
        @L["WhyCarrefourPart2"]
    </p>

    <h2>@L["ActivitiesTitle"]</h2>
    <ul>
        <li>@L["Activity1"]</li>
        <li>@L["Activity2"]</li>
        <li>@L["Activity3"]</li>
        <li>@L["Activity4"]</li>
        <li>@L["Activity5"]</li>
    </ul>

    <h2>@L["ExperienceTitle"]</h2>
    <p>@L["ExperienceDescription"]</p>

    <div class="alert alert-warning mt-4">
        <strong>@L["ThemeLabel"]</strong> « @L["ThemeText"] »
    </div>
</div>